[nix]
channel = "stable-25_05"
packages = ["alsa-lib", "at-spi2-atk", "at-spi2-core", "atk", "cairo", "cargo", "cups", "dbus", "file", "freetype", "glib", "glibcLocales", "libiconv", "libxcrypt", "libxkbcommon", "mesa", "nspr", "nss", "pango", "rustc", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXrandr", "xorg.libxcb"]

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd backend && uv run uvicorn main:app --host 0.0.0.0 --port 8000 & cd frontend && npm run preview -- --host 0.0.0.0 --port 5000 --strictPort"]
build = ["bash", "-c", "cd frontend && npm install && npm run build"]
