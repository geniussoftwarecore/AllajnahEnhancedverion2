# Database Configuration (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# JWT Authentication (Required)
JWT_SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Configuration (Required)
# For development: http://localhost:5000
# For production: https://your-domain.com
CORS_ORIGINS=http://localhost:5000

# Rate Limiting
RATE_LIMIT_LOGIN_PER_MINUTE=5
RATE_LIMIT_COMPLAINTS_PER_HOUR=10
RATE_LIMIT_UPLOADS_PER_HOUR=20

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# Redis (Optional - for caching)
REDIS_URL=

# Email Notifications (Optional)
SENDGRID_API_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
EMAIL_FROM=noreply@allajnah.com
ENABLE_EMAIL_NOTIFICATIONS=false

# SMS Notifications (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
ENABLE_SMS_NOTIFICATIONS=false
