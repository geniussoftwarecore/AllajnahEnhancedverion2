# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/allajnah_db

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Configuration (comma-separated origins for production)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_LOGIN_PER_MINUTE=5
RATE_LIMIT_COMPLAINTS_PER_HOUR=10
RATE_LIMIT_UPLOADS_PER_HOUR=20

# File Upload Security
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# Redis (for caching and rate limiting)
REDIS_URL=

# Email Notifications (choose one)
SENDGRID_API_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
EMAIL_FROM=noreply@allajnah.com

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# PostgreSQL Connection Details (if not using DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=yourpassword
PGDATABASE=allajnah_db
